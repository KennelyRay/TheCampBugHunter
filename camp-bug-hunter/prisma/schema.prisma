generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Severity {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum Status {
  BUG
  FIXED
  NOT_A_BUG
  ON_INVESTIGATION
}

model Bug {
  id                String   @id @default(uuid())
  createdAt         DateTime @default(now())
  discordId         String
  minecraftIgn      String
  title             String
  description       String
  reproductionSteps String
  evidenceLinks     String[] @default([])
  severity          Severity
  status            Status   @default(BUG)
  hidden            Boolean  @default(false)

  @@index([status, severity])
  @@index([discordId])
  @@map("bugs")
}

model User {
  id                String   @id @default(uuid())
  createdAt         DateTime @default(now())
  email             String   @unique
  minecraftUsername String   @unique
  passwordHash      String
  isAdmin           Boolean  @default(false) @map("is_admin")
  rewardBalance     Int      @default(0) @map("reward_balance")

  @@map("users")
}

model Reward {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  name        String
  cost        Int
  description String
  iconUrl     String
  command     String   @default("")
  stock       Int      @default(-1)
  active      Boolean  @default(true)

  @@index([active, cost])
  @@map("rewards")
}

model RewardRedemption {
  id                String   @id @default(uuid())
  createdAt         DateTime @default(now())
  minecraftUsername String
  rewardId          String
  command           String
  deliveredAt       DateTime?

  @@index([deliveredAt, createdAt])
  @@map("reward_redemptions")
}

model RegistrationCode {
  id                String   @id @default(uuid())
  createdAt         DateTime @default(now())
  minecraftUsername String
  playerUuid        String   @map("player_uuid")
  codeHash          String   @unique @map("code_hash")
  expiresAt         DateTime @map("expires_at")
  usedAt            DateTime? @map("used_at")

  @@index([minecraftUsername])
  @@index([playerUuid])
  @@index([expiresAt])
  @@map("registration_codes")
}

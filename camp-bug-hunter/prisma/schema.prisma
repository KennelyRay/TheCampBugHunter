generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Severity {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  BUG
  FIXED
  NOT_A_BUG
}

model Bug {
  id                String   @id @default(uuid())
  createdAt         DateTime @default(now())
  discordId         String
  minecraftIgn      String
  title             String
  description       String
  reproductionSteps String
  evidenceFileNames String[] @default([])
  videoEvidence     String?
  severity          Severity
  status            Status   @default(BUG)

  @@index([status, severity])
  @@index([discordId])
  @@map("bugs")
}

model User {
  id                String   @id @default(uuid())
  createdAt         DateTime @default(now())
  email             String   @unique
  minecraftUsername String   @unique
  passwordHash      String
  isAdmin           Boolean  @default(false) @map("is_admin")

  @@map("users")
}
